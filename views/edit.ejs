<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Post</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h2>Edit your post</h2>
        <p>Post id: <%= post.id %></p>
        <p>Post username: @<%= post.username %></p>
        <form method="post" action="/posts/<%=post.id%>?_method=PATCH" class="post-form" id="editForm">
            <textarea rows="10" cols="35" name="content" class="textarea-field" id="content"><%= post.content %></textarea> <br> <br>
            <button class="submit-button">Submit</button>
        </form>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const contentField = document.getElementById('content');

            if (localStorage.getItem('editContent')) {
                contentField.value = localStorage.getItem('editContent');
            }

            contentField.addEventListener('input', () => {
                localStorage.setItem('editContent', contentField.value);
            });

            document.getElementById('editForm').addEventListener('submit', () => {
                localStorage.removeItem('editContent');
            });
        });
    </script>
</body>
</html>